FROM node:12.2.0 as build
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . /app
RUN npm run build

FROM nginx:stable-alpine as production-stage
RUN rm /etc/nginx/conf.d/default.conf
COPY ./docker/nginx.conf /etc/nginx/conf.d
COPY --from=build /app/dist /app/dist
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]