version: '3.3'

services:
  db:
    image: postgres
    container_name: db
    env_file:
      - ./.env.db
    volumes:
      - postgres_data:/var/lib/postgresql/data/
    restart: unless-stopped
    ports:
      - "5432:5432"
  django:
    build:
      context: .
      dockerfile: docker/DockerfileBackend
    container_name: backend
    env_file:
      - ./.env
    volumes:
      - .:/app
      - ./static_volume:/app/static
      - ./media_volume:/app/media
    ports:
      - "80:80"
    depends_on:
      - db
  vue:
    build:
      context: .
      dockerfile: ./docker/DevDockerfileFrontend
    container_name: frontend
    volumes:
      - .:/app
    ports:
      - "8080:8080"
    depends_on:
      - django

volumes:
  postgres_data:
  static_volume:
  media_volume:
  dist: